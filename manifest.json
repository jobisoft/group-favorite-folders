{
    "manifest_version": 2,
    "name": "Group Favorite Folders",
    "description": "An extension for Thunderbird 115+ (Supernova) that groups and sorts favorites folders in the compact view.",
    "version": "0.1",
    "author": "kickofitall",
    "homepage_url": "https://github.com/kickofitall/group-favorite-folders",
    "browser_specific_settings": {
        "gecko": {
            "id": "kickofitall@gmail.com",
            "strict_min_version": "115.0",
            "strict_max_version": "115.*"
        }
    },
    "icons": {
        "32": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "accountsRead"
    ],
    "experiment_apis": {
        "CustomFolderGroup": {
            "schema": "api/CustomFolderGroup/schema.json",
            "parent": {
                "scopes": [
                    "addon_parent"
                ],
                "paths": [
                    [
                        "CustomFolderGroup"
                    ]
                ],
                "script": "api/CustomFolderGroup/implementation.js"
            }
        }
    }
}
